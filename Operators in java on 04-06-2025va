package operators;

public class Arithmetic {
	public static void main (String[] agrs) {
		int a = 10;
        int b = 3;
        
      
        System.out.println("a + b = " + (a + b));
        System.out.println("a - b = " + (a - b));
        System.out.println("a * b = " + (a * b));
        System.out.println("a / b = " + (a / b));
        System.out.println("a % b = " + (a % b));
          
    }

	}
