package operators;

public class Assignment {
	public static void main(String[] args)
    {
	int a = 3;
    System.out.println("a += 3: " + (a += 3));
    System.out.println("a -= 2: " + (a -= 2));
    System.out.println("a *= 4: " + (a *= 4));
    System.out.println("a /= 3: " + (a /= 3));
    System.out.println("a %= 2: " + (a %= 2));
    }
}
