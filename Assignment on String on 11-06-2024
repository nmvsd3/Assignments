package string;

public class Main {
    public static void main(String[] args) {
        String str = "This is sarvagna infotech pvt ltd";
        
   
        int totalLength = str.length();
        System.out.println("Total length of the string: " + totalLength);
        
        
        boolean containsPvt = str.contains("pvt");
        System.out.println("'pvt' exists in the string: " + containsPvt);
        
        
        String substringFrom7 = str.substring(7);
        System.out.println("Substring starting from index 7: " + substringFrom7);
        
       
        String substringFrom3to13 = str.substring(3, 14);
        System.out.println("Substring from index 3 to index 13: " + substringFrom3to13);
        
       
        String newString = str + " SR Nagar Hyderabad";
        System.out.println("New string: " + newString);
    }
}
